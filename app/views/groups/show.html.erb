<div class="wrapper">
  <div class="side-ber">
    <div class="side-ber__user-name">
      <%= current_user.name %>
    </div>

    <div class="side-ber__new-group">
      <%= link_to "新規グループ作成", new_group_path, class: 'post' %>
    </div>  

    <div class='groups'>
      <%= link_to group_path(@group) do %>
        <div class='groups__name'>
          <p>グループ名:<%=@group.name%></p>
        </div>
      <% end %>
      <div class="groups__index">グループ一覧
      <p><% current_user.groups.each do |g| %>
        <%= link_to "#{g.name}", group_path(g.id) %>
      
      
      <%end%>
      </div>
    </div>
  </div>
  
  <div class="event-main">
    <div class="event-new">
      <%= link_to new_group_event_path(@group,@event), class: "post" do%>
      <i class="fas fa-plus-circle"></i>
      <%end%>
    </div>

    
  
      <%= month_calendar events: @events do |date, events| %>
        <%=date.to_formatted_s(:short)%>
        <% events.each do |event| %>
          <%= link_to group_event_path(@group, event), id: "requests", method: :get do %>
        <div id="requests">
          <div style="background-color:<%=event.color%>; color: #666666; border-radius: 5px; padding: 3px 3px 3px 6px; margin: 2px;">
            
            <%= event.title %>
          </div>
            <%end%>
          <% end %>
        <% end %>
    </div>
  </div>
</div>


