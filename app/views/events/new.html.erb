<head>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script type="text/javascript">
$(function(){
  $('#color-list').on('change', function(){
    $('#lavel').css("color", $('#color-list').val());
    $('#area').text($("#color-list").val());
    $('#color-data').val($('#color-list').val())
  });
});



</script>
</head>


<div class="wrapper"> 
<div class="form">
  <div class='form-text'>
  <% if current_user %>
  <%= form_with model: [@group, @event], url: group_events_path, local: true do |f| %>
    <label class="contol-label" for="">タイトル</label>
    <%= f.text_field :title, class: 'form-control' %>
    <p class="event-form">
    <label class="contol-label" for="">開始</label>
    <%= f.datetime_select :start, {}, class: 'form-control' %>
    </p>
    <p class="event-form">
    <label class="contol-label" for="">終了</label>
    <%= f.datetime_select :end , {}, class: 'form-control' %>
    </p>
    
    <label id="label"><input type="checkbox" id="day" name="event[allday]" checked>終日</label>
    
    <p class="event-form">
    <label id='label'>color選択</label>
    <input type="hidden" name="event[color]" value="#ffffff" id="color-data">
    <input id='color-list' type="color" value="#ffffff" list="colors" >
    <datalist id="colors">
      <option value="#FF99CC"></option>
			<option value="#6699FF"></option>
			<option value="#FFCC00"></option>
      <option value="#99CC33"></option>
      <option value="#FF6633"></option>
      <option value="#9966CC"></option>
    </datalist>
    </p>

    <%= f.submit "SEND", class: "submit-btn"%>
  <% end %>
    <% else %>
      <strong><p>※※※ 予定の登録には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
  </div>
</div>
</div>
